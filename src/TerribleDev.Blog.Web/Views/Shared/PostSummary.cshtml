@model IPost

<article class="btmRule">
    <h3 itemprop="headline" class="headline"><a asp-controller="Home" asp-action="Post" asp-route-postUrl="@Model.UrlWithoutPath" class="link-unstyled">@Model.Title</a></h3>
    <time class="headlineSubtext" itemprop="datePublished" content="@Model.PublishDate.ToString()">@Model.PublishDate.ToString("D")</time>
    <div itemprop="articleBody">
        @Model.Summary
    </div>
    <a href="@Model.RelativeUrl">Continue Reading </a>
</article>
